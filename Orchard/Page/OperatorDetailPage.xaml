<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Orchard;assembly=Orchard"
    x:Class="Orchard.OperatorDetailPage">
    <ContentPage.Content>
        <ScrollView>
			<StackLayout Padding="8">
				<StackLayout Orientation="Horizontal">
					<local:ImageButton Image="{Binding Image}" WidthRequest="100" HeightRequest="100" ImageWidthRequest="100" ImageHeightRequest="100" Clicked="ImageClicked" Orientation="Bottom"/>
					<StackLayout HorizontalOptions="FillAndExpand">
		            	<Label Text="Name"/>
		            	<Entry Text="{Binding Name}" />
		            </StackLayout>
				</StackLayout>

				<Label Text="Certification number"/>
				<Entry Text="{Binding CertificationNumber}"/>

				<Label Text="Note"/>
				<Editor HeightRequest="200" Text="{Binding Note}"/>
		
				<Button x:Name="_delBtn" Text="Delete" TextColor="White" BackgroundColor="Red" Clicked="DelClicked"/>
			</StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>

