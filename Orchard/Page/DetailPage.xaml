<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Orchard;assembly=Orchard"
    x:Class="Orchard.DetailPage">
    <ContentPage.Content>
        <ScrollView>
			<StackLayout x:Name="_sl" Padding="8">
				<StackLayout Orientation="Horizontal">
					<local:ImageButton Image="{Binding LocalItem.Image}" WidthRequest="100" HeightRequest="100" ImageWidthRequest="100" ImageHeightRequest="100" Clicked="ImageClicked" Orientation="Bottom"/>
					<StackLayout HorizontalOptions="FillAndExpand">
		            	<Label Text="Name"/>
		            	<Entry Text="{Binding LocalItem.Name}" />
		            </StackLayout>
				</StackLayout>
				<!--Custom view for each data item type -->
				<Button x:Name="_delBtn" IsVisible="{Binding IsEditing}" Text="Delete" TextColor="White" BackgroundColor="Red" Clicked="DelClicked"/>
			</StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>

